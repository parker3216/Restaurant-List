<form action="/restaurants/{{ restaurant._id }}?_method=PUT" method="post">
<h1 class="mb-1 restaurant-show-title">更改餐廳資料 - {{ restaurant.name }}</h1>
<div class="container">
    <div class="mt-2">
      <label class="label" for="name">餐廳名稱</label>
      <input type="text" placeholder="輸入餐廳名稱..." name="name" id="name" class="input-space" value="{{ restaurant.name }}" required>
    </div>
    <div class="mt-2">
      <label class="label" for="name_en">英文名稱</label>
      <input type="text" placeholder="輸入餐廳英文名稱..." name="name_en" id="name_en" class="input-space" value="{{ restaurant.name_en }}" required>
    </div>
    <div class="mt-2">
      <label class="label" for="category">餐廳種類</label>
      <input type="text" placeholder="輸入餐廳類型..." list="categoryOptions" name="category" id="category"
        class="input-space" value="{{ restaurant.category }}" required>
      <datalist id="categoryOptions">
        <option>美式</option>
        <option>咖啡</option>
        <option>中東料理</option>
        <option>日本料理</option>
        <option>義式餐廳</option>
        <option>酒吧</option>
      </datalist>
    </div>
    <div class="mt-2">
      <label class="label" for="image">圖片連結</label>
      <input type="url" placeholder="輸入餐廳圖片連結..." name="image" id="image" class="input-space" value="{{ restaurant.image }}" required>
    </div>
    <div class="mt-2">
      <label class="label" for="location">餐廳地址</label>
      <input type="text" placeholder="輸入餐廳地址..." name="location" id="location" class="input-space" value="{{ restaurant.location }}" required>
    </div>
    <div class="mt-2">
      <label class="label" for="phone">餐廳電話</label>
      <input type="tel" placeholder="輸入餐廳電話..." name="phone" id="phone" class="input-space" value="{{ restaurant.phone }}" required>
    </div>
    <div class="mt-2">
      <label class="label" for="google_map">餐廳地圖</label>
      <input type="url" placeholder="輸入地圖連結..." name="google_map" id="google_map" class="input-space" value="{{ restaurant.google_map }}" required>
    </div>
    <div class="mt-2">
      <label class="label" for="description">餐廳敘述</label>
      <textarea row="4" type="text" placeholder="輸入餐廳敘述..." name="description" id="description" class="input-space"
        required>{{ restaurant.description }}</textarea>
    </div>
    <div class="mt-2">
      <label class="label" for="rating">餐廳評分</label>
      <input type="number" step="0.1" max="5" min="1" placeholder="輸入餐廳評分..." name="rating" id="rating"
        class="input-space" value="{{ restaurant.rating }}" required>
    </div>
    <div class="mt-2">
      <button type="submit" class="btn btn-primary">儲存修正</button>
      <button type="reset" class="btn btn-warning">重新輸入</button>
      <a href="/"><button type="button" class="btn btn-success">回到首頁</button></a>
    </div>
  </div>
  </form>